{
  "extends": [
    "next",
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": [
    "import",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "warn",
    "camelcase": "off",
    "no-ternary": "off",
    "no-empty": "warn",
    "react/require-default-props": "off",
    "react/prop-types": "off",
    "react/jsx-filename-extension": "off",
    "react/jsx-props-no-spreading": "off",
    "quotes": [
      "warn",
      "backtick"
    ]
  },
  "overrides": [
    {
      "files": ["*.stories.@(ts|tsx)"],
      "rules": {
        "quotes": ["warn", "single"]
      }
    }
  ]
}
